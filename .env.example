# Database
POSTGRES_PASSWORD=sentinel
DATABASE_URL=postgresql://sentinel:sentinel@localhost:5433/sentinel

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Providers
OLLAMA_BASE_URL=http://192.168.1.228:11434/v1

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
USE_CELERY=false

# Celery retry policies (optional — defaults shown)
# CELERY_FETCH_MAX_RETRIES=5
# CELERY_FETCH_RETRY_BACKOFF=60
# CELERY_FETCH_RETRY_BACKOFF_MAX=600
# CELERY_EXTRACT_MAX_RETRIES=3
# CELERY_EXTRACT_RETRY_BACKOFF=300
# CELERY_EXTRACT_MANUAL_RETRY_BASE=60
# CELERY_BATCH_EXTRACT_MAX_RETRIES=2
# CELERY_BATCH_EXTRACT_RETRY_BACKOFF=300
# CELERY_BATCH_EXTRACT_MANUAL_RETRY_BASE=120
# CELERY_BATCH_ENRICH_MAX_RETRIES=3
# CELERY_BATCH_ENRICH_RETRY_BACKOFF=120
# CELERY_ENRICH_MAX_RETRIES=2
# CELERY_ENRICH_RETRY_BACKOFF=300
# CELERY_PIPELINE_MAX_RETRIES=1
# CELERY_PIPELINE_RETRY_BACKOFF=600

# Geocoding
# Enable Nominatim API fallback for cities not in local lookup (default: false)
GEOCODING_API_ENABLED=false

# Backup (optional — defaults shown)
# DB_BACKUP_HOST=localhost
# DB_BACKUP_PORT=5433
# DB_BACKUP_USER=sentinel
# DB_BACKUP_NAME=sentinel
# BACKUP_RETAIN_DAILY=7
# BACKUP_RETAIN_WEEKLY=4

# Environment
ENVIRONMENT=development

# Optional: News API key for data pipeline
NEWS_API_KEY=your_news_api_key_here
